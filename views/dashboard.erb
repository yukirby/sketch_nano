<h1>ダッシュボード</h1>
<p><a href="/dashboard?adult=1">R-18を表示</a></p>
<p><a href="/draw">お絵かきする</a></p>

<% posts.each do |post| %>
  <div class="post">
    <h2>
      <%= post["title"] %>
    </h2>
    <p class="post-image">
    <img src="/uploads/<%= post["src"] %>" alt="<%= post["title"] %>">
    <% if post['adult'] == "true" %>[R-18]<% end %>
    </p>
    <p>
    💖
    <button class="like" data-id="<%= post["id"] %>">
      <%= post["likes"] %>
    </button>
    </p>
  </div>
<% end %>
<script src="/js/dashboard.js"></script>
